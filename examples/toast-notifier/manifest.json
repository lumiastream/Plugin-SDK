{
  "id": "toast-notifier",
  "name": "Toast Notifier",
  "version": "1.0.0",
  "author": "LumiaStream",
  "description": "Shows how to use settings and actions to trigger Lumia toasts.",
  "license": "MIT",
  "lumiaVersion": "^9.0.0",
  "category": "utilities",
  "config": {
    "settings": [
      {
        "key": "defaultMessage",
        "label": "Default Toast Message",
        "type": "text",
        "defaultValue": "Hello from Toast Notifier!"
      },
      {
        "key": "displayTime",
        "label": "Toast Duration (ms)",
        "type": "number",
        "defaultValue": 4000
      }
    ],
    "actions": [
      {
        "type": "show_toast",
        "label": "Show Toast",
        "description": "Display a toast message using optional overrides.",
        "fields": [
          {
            "key": "message",
            "label": "Message",
            "type": "text",
            "placeholder": "Override the default message"
          },
          {
            "key": "duration",
            "label": "Duration (ms)",
            "type": "number",
            "placeholder": "Override the default duration"
          }
        ]
      }
    ],
    "variables": []
  }
}
