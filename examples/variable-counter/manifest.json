{
  "id": "variable-counter",
  "name": "Variable Counter",
  "version": "1.0.0",
  "author": "LumiaStream",
  "description": "Shows how to manage plugin variables and reuse actions.",
  "license": "MIT",
  "lumiaVersion": "^9.0.0",
  "category": "development",
  "config": {
    "settings": [
      {
        "key": "startValue",
        "label": "Initial Counter Value",
        "type": "number",
        "defaultValue": 0
      }
    ],
    "actions": [
      {
        "type": "increment",
        "label": "Increment Counter",
        "description": "Increase the counter by the specified amount (default 1).",
        "fields": [
          {
            "key": "amount",
            "label": "Amount",
            "type": "number",
            "defaultValue": 1
          }
        ]
      },
      {
        "type": "reset",
        "label": "Reset Counter",
        "description": "Reset the counter back to the starting value.",
        "fields": []
      }
    ],
    "variables": [
      {
        "name": "count",
        "system": false,
        "origin": "variable-counter",
        "allowedPlaces": [],
        "description": "Current counter value",
        "value": 0,
        "example": "variable-counter_count"
      }
    ]
  }
}
