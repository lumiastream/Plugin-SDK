        "value": 0
      },
      {
        "name": "hotnews_recent_articles",
        "description": "JSON payload containing the most recent headlines.",
        "value": ""
      },
      {
        "name": "hotnews_keyword",
        "description": "Keyword used for the latest refresh.",
        "value": ""
      },
      {
